generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Generation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Input
  prompt    String
  mode      String   @default("image") // "image" or "video"
  model     String   // kie.ai model name

  // Video-specific parameters (nullable for backward compatibility)
  inputImageUrls String[] // URLs of uploaded images (0-2 images for video mode)
  aspectRatio    String?  // e.g., "1:1", "16:9", "9:16"
  resolution     String?  // e.g., "480p", "720p"
  duration       Int?     // Duration in seconds (4, 8, 12)
  fixedLens      Boolean? // Whether to use fixed lens
  generateAudio  Boolean? // Whether to generate audio

  // Job tracking
  status    String   @default("pending") // pending, processing, completed, failed
  jobId     String?  @unique // BullMQ job ID
  kieJobId  String?  @unique // kie.ai generation ID

  // Output
  resultUrl String?
  errorMessage String?

  @@index([status])
  @@index([createdAt])
}
